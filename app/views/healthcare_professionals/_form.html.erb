<%= form_for @healthcare_professional, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Healthcare Professional</legend>

    <div class="control-group">
      <%= f.label :firstname, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :firstname, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :lastname, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :lastname, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'text_field', :size=>"30" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :speciality, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :speciality, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', healthcare_professionals_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>