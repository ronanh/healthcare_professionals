<h1>Listing Healthcare Professionals</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Speciality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @healthcare_professionals.each do |healthcare_professional| %>
      <tr>
        <td><%= healthcare_professional.firstname %></td>
        <td><%= healthcare_professional.lastname %></td>
        <td><%= healthcare_professional.address %></td>
        <td><%= healthcare_professional.speciality %></td>
        <td><%= link_to 'Show', healthcare_professional %></td>
        <td><%= link_to 'Edit', edit_healthcare_professional_path(healthcare_professional) %></td>
        <td><%= link_to 'Destroy', healthcare_professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

