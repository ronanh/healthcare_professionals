<p id="notice"><%= notice %></p>

<h1>Listing Healthcare Professionals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Speciality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @healthcare_professionals.each do |healthcare_professional| %>
      <tr>
        <td><%= healthcare_professional.firstname %></td>
        <td><%= healthcare_professional.lastname %></td>
        <td><%= healthcare_professional.address %></td>
        <td><%= healthcare_professional.speciality %></td>
        <td><%= link_to 'Show', healthcare_professional, :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_healthcare_professional_path(healthcare_professional), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', healthcare_professional, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Healthcare professional', new_healthcare_professional_path, :class => 'btn btn-primary' %>
